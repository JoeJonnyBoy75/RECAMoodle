{{!
    @template block_myoverview/courses-view-course-item

    This template renders the course summary (view by courses) for the myoverview block.

    Example context (json):
    {
        "fullnamedisplay": "course 3",
        "viewurl": "https://www.google.com",
        "summary": "It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
    }
}}
<div class = "col-md-4 col-lg-4 px-0 mx-15 bg-white hidden">
    <div class="card mb-0">
        <figure class="overlay overlay-hover rounded">
        <div  class="courses-slides overlay-figure overlay-scale" style="background: linear-gradient(to bottom, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.4)), url('{{ imageurl }}');background-size: cover;background-position: center;">
            <h4 class="card-title p-20">
                <a href="{{ viewurl }}" class="font-weight-500 text-white py-5 font-size-18">{{{ fullnamedisplay }}}</a>
            </h4>
            {{#hasprogress}}
            <div class="progress progress-xs progress-square mb-0 po-relbottom">
                <div class="progress-bar" style="width: {{progress}}&#37;;;" role="progressbar">
                </div>
            </div>
            {{/hasprogress}}
        </div>
        <figcaption onclick="location.href='{{ viewurl }}';" class="overlay-panel overlay-background overlay-fade text-center vertical-align" style="cursor: pointer;">
            <a href = "{{ viewurl }}" class="btn text-white font-weight-600 font-size-18 vertical-align-middle">{{#str}} viewcourse, theme_remui {{/str}}</a>
        </figcaption>
        </figure>
    </div>
</div>
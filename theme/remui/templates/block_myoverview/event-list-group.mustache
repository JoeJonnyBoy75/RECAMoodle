{{!
    @template block_myoverview/event-list-group

    This template renders a list of events for the myoverview block.

    Example context (json):
    {
        "events": [
            {
                "enddate": "Nov 4th, 10am",
                "name": "Assignment due 1",
                "url": "https://www.google.com",
                "course": {
                    "fullname": "Course 1"
                },
                "action": {
                    "name": "Submit assignment",
                    "url": "https://www.google.com",
                    "itemcount": 1
                },
                "icon": {
                    "key": "icon",
                    "component": "mod_assign",
                    "alttext": "Assignment icon"
                }
            },
            {
                "enddate": "Nov 4th, 10am",
                "name": "Assignment due 2",
                "url": "https://www.google.com",
                "course": {
                    "fullname": "Course 1"
                },
                "action": {
                    "name": "Submit assignment",
                    "url": "https://www.google.com",
                    "itemcount": 1
                },
                "icon": {
                    "key": "icon",
                    "component": "mod_assign",
                    "alttext": "Assignment icon"
                }
            }
        ]
    }
}}
{{# latestdashboard }}
<div data-region="event-list-group-container"
     data-start-day="{{$startday}}0{{/startday}}"
     data-end-day="{{$endday}}{{/endday}}"
     class="hidden carousel vertical slide"
     id = "carousel-example-vertical-{{$tab}}{{/tab}}"
     data-ride="carousel"
     data-interval="false"
     >
    <div class="list-group list-group-gap carousel-inner mb-0" style="z-index:2;position:relative" role="listbox" data-region="event-list" aria-describedby="event-list-title-{{uniqid}}">
            {{$eventlistitems}}
                {{> block_myoverview/event-list-items }}
            {{/eventlistitems}}
    </div>
    <div class="card h-250 no-event mb-10 shadow" style = "display:none; position: relative; z-index: 2">
        <div class="card-block h-250 p-0 d-flex align-items-center justify-content-center flex-column">
            <img class="empty-placeholder-image-lg"
             src="{{urls.noevents}}"
             alt="{{#str}} noevents, block_myoverview {{/str}}"
             role="presentation">
            <p class="text-muted m-t-1">{{#str}} noevents, theme_remui {{/str}}</p>
        </div>
    </div>

    {{! Card Stack Effect }}
    <div class="card-bottom-first"></div>
    <div class="card-bottom-second"></div>

    <div class="w-40 carousel-navbutton" style="position: absolute; z-index:999; bottom: 40px; right: 5px;">
        <a class="btn btn-icon font-size-20 py-5" href="#carousel-example-vertical-{{$tab}}{{/tab}}" role="button" data-slide="next">
            <i class="icon wb-chevron-up grey-500" aria-hidden="true"></i>
        </a>

        <a class="btn btn-icon font-size-20 py-5" href="#carousel-example-vertical-{{$tab}}{{/tab}}" role="button" data-slide="prev">
            <i class="icon wb-chevron-down grey-500" aria-hidden="true"></i>
        </a>
    </div>
</div>
{{/ latestdashboard }}
{{^ latestdashboard }}
<div data-region="event-list-group-container"
     data-start-day="{{$startday}}0{{/startday}}"
     data-end-day="{{$endday}}{{/endday}}"
     class="hidden">

    <h5 class="h6 m-t-1 {{$extratitleclasses}}{{/extratitleclasses}}" id="event-list-title-{{uniqid}}"><strong>{{$title}}{{/title}}</strong></h5>
    <ul class="list-group list-group-dividered" data-region="event-list" aria-describedby="event-list-title-{{uniqid}}">
        {{$eventlistitems}}
            {{> block_myoverview/event-list-items }}
        {{/eventlistitems}}
    </ul>
</div>
{{/ latestdashboard }}

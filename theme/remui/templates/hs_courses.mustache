<section data-instance="{{id}}" data-sectionname="{{sectionname}}" {{{sectionpropertiesoutput}}}>

    {{> theme_remui/hs_editmenu}}

    <div class="row m-0 w-p100 m-auto px-sm-0 {{sectioncontaineroutput}} " >
        <div class="row w-p100 text-center justify-content-center m-0 p-0">
            <div class=" pb-50 px-50 pt-0" >
                {{#title}}{{> theme_remui/hs_common_title}}{{/title}}

                {{#description}}
                {{> theme_remui/hs_common_title}}
                {{/description}}
            </div>
        </div>

        {{#coursesview}}
            <div class="row w-p100 courses-slider latest-cards m-0 p-0">
                {{> theme_remui/hs_courses_cards}}
            </div>
        {{/coursesview}}

        {{#categoriesview}}
        <div class="category-wrapper card-deck w-p100 row courses-slider py-10 m-0 p-0">
            {{#categorylist}}
                <div class="course-card-wrapper col-12 my-10" style="min-height: 200px;">
                    <div class="course-card my-10" style="{{#shadowless}}box-shadow: 0px 0px 10px -1px  {{sectionproperties.shadowcolor}};{{/shadowless}}">
                        <div class="body" style="min-height: 170px; {{^shadowless}}box-shadow: 0px 0px 2px #ccc;{{/shadowless}}">
                            <p class="name m-0" >{{categoryname}}</p>
                            {{#parentname}}<p class="type m-0 mt-2">{{parentname}}</p>{{/parentname}}
                            <p class="description ellipsis ellipsis-2  mb-0 mx-0 mt-5">{{categorydesc}}</p>
                        </div>
                        <div class="footer">
                            <div class="left">
                                <button class="bg-transparent border-0 font-size-24 font-weight-600 p-0">{{coursecount}}</button>
                                <span class="font-size-12">Courses</span>
                            </div> 

                            <div class="right">
                                <a href="{{categoryurl}}"><button class="btn bg-white ">View</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/categorylist}}
        </div>
        {{/categoriesview}}

        {{#categoryandcoursesview}}
        <div class="course-category-wrapper w-full d-inline-flex h-400">
            {{#categoryandcourses}}
            <div class="category-list col-lg-3 col-md-6 col-sm-10 h-only-md-400 h-only-sm-450 h-only-xs-450 p-0">
                <div class="site-skintools-toggle d-none text-primary btn-primary btn-outline border-left-0" data-instance="{{id}}"><i class="fa fa-chevron-right"></i></div>
                <div class="wrapper border border-left-0 border-primary mb-0 pb-lg-15 {{#latest_card}}latest_card{{/latest_card}} {{^latest_card}}old_card{{/latest_card}}">
                  <!-- Card List -->
                  <div class="card-list mb-0 h-p100">
                    {{#catlist}}
                    <div class="category-item card card-background {{#active}} active {{/active}}" data-id="{{categoryid}}" 
                        {{#shadowless}}style="box-shadow: -1px 4px 6px -1px  {{sectionproperties.shadowcolor}};"{{/shadowless}}>
                        {{#ishidden}}
                        <div class="ribbon category-hidden" title="{{#str}}hiddencategory, theme_remui{{/str}}">
                            <span class="ribbon-inner"><i class="fa fa-eye-slash" aria-hidden="true"></i></span>
                        </div>
                        {{/ishidden}}
                        <p class="card__owner">{{categoryname}}</p>
                        <div class="card__info">
                        {{#parentname}}<p class="font-size-12 text-white">{{parentname}}</p>{{/parentname}}
                        {{#idnumber}}<p class="card__integral">Id Number  {{idnumber}}</p>{{/idnumber}}
                        <p class="font-size-12 text-white">Courses {{coursecount}}</p>
                        </div>
                    </div>
                    {{/catlist}}
                  </div>
                </div>

            </div>
            <div class="row col-lg-9 col-12 courses-slider latest-cards m-0 p-0 h-p100">
            </div>
            {{/categoryandcourses}}
        </div>
        {{/categoryandcoursesview}}

        <div class='available-courses button-container w-p100 text-center p-10'>
            <button type='button' class='btn btn-floating btn-primary btn-prev btn-sm mx-5 {{^shadowless}}shadow-none{{/shadowless}}'>
                <i class='icon fa fa-chevron-left' aria-hidden='true'></i></button>
            <button type='button' class='btn btn-floating btn-primary btn-next btn-sm mx-5 {{^shadowless}}shadow-none{{/shadowless}}'>
                <i class='icon fa fa-chevron-right' aria-hidden='true'></i></button>
        </div>
    </div>
</div>

</section>

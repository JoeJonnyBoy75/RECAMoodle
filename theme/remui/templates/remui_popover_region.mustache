{{!
    @template core/popover_region

    This template will render a popover region

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * none

    Example context (json):
    {
    }

}}
<li class="popover-region collapsed {{$classes}}{{/classes}} nav-item dropdown"
    {{$attributes}}{{/attributes}}
    data-region="popover-region">
    <a class="popover-region-toggle nav-link"
        data-toggle="dropdown"
        data-region="popover-region-toggle"
        href="javascript:void(0)"
        title="{{$toggletitle}}{{/toggletitle}}"
        aria-expanded="false"
        data-animation="scale-up"
        role="button">
        {{$togglecontent}}{{/togglecontent}}
    </a>

    <div {{$containerattributes}}{{/containerattributes}}
        id="popover-region-container-{{uniqid}}"
        class="dropdown-menu dropdown-menu-right dropdown-menu-media"
        style="height: auto;"
        data-region="popover-region-container"
        aria-expanded="false"
        aria-hidden="true"
        aria-label="{{$containerlabel}}{{/containerlabel}}"
        role="region">
        <div class="dropdown-menu-header">
            <h5 class="text-uppercase d-inline" data-region="popover-region-header-text">{{$headertext}}{{/headertext}}</h5>
            <span class="float-right popover-region-header-actions">{{$headeractions}}{{/headeractions}}</span>
        </div>

        <div class="list-group" role="presentation">
            <div class="popover-region-content-container" style="min-height: 200px;" data-role="container" data-region="popover-region-content-container">
                <div class="popover-region-content" data-role="content" data-region="popover-region-content">
                    {{$content}}{{/content}}
                </div>
                {{> core/loading }}
            </div>
        </div>
        <div class="dropdown-menu-footer" role="presentation">
            {{$footeractions}}{{/footeractions}}

            {{$anchor}}
                {{#urls.seeall}}
                    <a class="see-all-link dropdown-item"
                        role="menuitem"
                        href="{{{.}}}">
                        {{#str}} seeall, message {{/str}}
                    </a>
                {{/urls.seeall}}
            {{/anchor}}
        </div>
    </div>
</li>

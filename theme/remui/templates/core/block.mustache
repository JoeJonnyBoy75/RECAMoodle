{{!
    @template theme_remui/block

    Example context (json):
    {
        "id": "block0",
        "showskiplink": true,
        "type": "html",
        "ariarole": "complementary",
        "title": "Test block",
        "blockinstanceid": 1,
        "content": "<p>Hello block world!</p>"
    }

}}
<div class="{{^isremuiblck}}panel panel-bordered{{/isremuiblck}} {{#hidden}}hidden{{/hidden}} block block_{{type}} {{#hascontrols}}block_with_controls{{/hascontrols}} "
id="{{id}}" role="{{ariarole}}" data-block="{{type}}"
{{#arialabel}} aria-label={{#quote}}{{{arialabel}}}{{/quote}} {{/arialabel}}
{{^arialabel}} {{#title}} aria-labelledby="instance-{{blockinstanceid}}-header" {{/title}} {{/arialabel}} 
{{#isremuiblck}}style="background-color: transparent;"{{/isremuiblck}}
>
    <div class="panel-heading {{^isremuiblck}}card-block{{/isremuiblck}} ">
        {{#isremuiblck}}
            {{#hascontrols}}
                {{#title}}
                    <h4 id="instance-{{blockinstanceid}}-header" class="p-20 m-0 wdm-block-title" title="{{{title}}}">{{{title}}}</h4>
                {{/title}}
            {{/hascontrols}}
        {{/isremuiblck}}
        {{#hascontrols}}
            <div class="panel-actions block-controls header">
            {{{controls}}}
            </div>
        {{/hascontrols}}
        {{^isremuiblck}}
            {{#title}}
                <h4 id="instance-{{blockinstanceid}}-header" class="p-20 m-0 wdm-block-title"  title="{{{title}}}">{{{title}}}</h4>
            {{/title}}
        {{/isremuiblck}}
    </div>
    <div class="{{^isremuiblck}}panel-body px-20 pb-20 pt-0{{/isremuiblck}} {{#dragable}}drag{{/dragable}}">
        {{{content}}}
    </div>
    {{#footer}}
    <div class="panel-footer border-top-0">{{{footer}}}</div>
    {{/footer}}
        {{{annotation}}}
</div>
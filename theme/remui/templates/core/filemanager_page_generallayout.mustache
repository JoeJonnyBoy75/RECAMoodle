<div id="filemanager-{{{client_id}}}" class="filemanager fm-loading w-full">
    <div class="fp-restrictions">
        {{{restrictions}}}
        <span class="dnduploadnotsupported-message"> - {{#str}}dndnotsupported_insentence{{/str}}{{{helpicon}}}</span>
    </div>
    <div class="fp-navbar bg-faded card m-b-0">
        <div class="filemanager-toolbar icon-no-spacing">
            <div class="fp-toolbar">
                <div class="fp-btn-add">
                    <button  title="{{#str}}addfile, repository{{/str}}" type="button" role="button"  class="btn btn-icon btn-default btn-outline btn-sm">{{#pix}}a/add_file{{/pix}}</button>
                </div>
                <div class="fp-btn-mkdir">
                    <button  title="{{#str}}makeafolder{{/str}}" type="button" role="button"  class="btn btn-icon btn-default btn-outline btn-sm">{{#pix}}a/create_folder{{/pix}}</button>
                </div>
                <div class="fp-btn-download">
                    <button  title="{{#str}}downloadfolder, repository{{/str}}" type="button" role="button"  class="btn btn-icon btn-default btn-outline btn-sm">{{#pix}}a/download_all{{/pix}}</button>
                </div>
                <span class="fp-img-downloading">
                    <button  title="{{#str}}loadinghelp{{/str}}" type="button" role="button"  class="btn btn-icon btn-default btn-outline btn-sm">{{#pix}}a/loading_small{{/pix}}</button>
                </span>
            </div>
            <div class="fp-viewbar btn-group float-right">
                <button  title="{{#str}}displayicons, repository{{/str}}" type="button" class="fp-vb-icons btn btn-icon btn-default btn-outline">{{#pix}}fp/view_icon_active, theme{{/pix}}</button>
                <button  title="{{#str}}displaydetails, repository{{/str}}" type="button" class="fp-vb-details btn btn-icon btn-default btn-outline">{{#pix}}fp/view_list_active, theme{{/pix}}</button>
                <button  title="{{#str}}displaytree, repository{{/str}}" type="button" class="fp-vb-tree btn btn-icon btn-default btn-outline">{{#pix}}fp/view_tree_active, theme{{/pix}}</button>
            </div>
        </div>
        <div class="fp-pathbar">
            <span class="fp-path-folder"><a class="fp-path-folder-name" href="#"></a></span>
        </div>
    </div>
    <div class="filemanager-loading mdl-align">{{#pix}}i/loading_small{{/pix}}<span class="sr-only">{{#str}}loadinghelp{{/str}}</span></div>
    <div class="filemanager-container card" >
        <div class="fm-content-wrapper">
            <div class="fp-content"></div>
            <div class="fm-empty-container">
                <div class="dndupload-message">{{#str}}dndenabled_inbox{{/str}}<br/><div class="dndupload-arrow"></div></div>
            </div>
            <div class="dndupload-target">{{#str}}droptoupload{{/str}}<br/><div class="dndupload-arrow"></div></div>
            <div class="dndupload-progressbars"></div>
            <div class="dndupload-uploadinprogress">{{#pix}}i/loading_small{{/pix}}<span class="sr-only">{{#str}}loadinghelp{{/str}}</span></div>
        </div>
        <div class="filemanager-updating">{{#pix}}i/loading_small{{/pix}}<span class="sr-only">{{#str}}loadinghelp{{/str}}</span></div>
    </div>
</div>

<form action="{{searchurl}}" id="{{id}}" method="get" class="frontpagesearch form-inline m-0">
    <div class="form-group coursesearchbox frontpage invisiblefieldset m-0">
      <div class="input-search">
        <button type="submit" class="input-search-btn"><i class="icon fa fa-search" aria-hidden="true"></i></button>
        <input type="text" class="form-control" class="form-control h-40 w-200" style="border-radius: .215rem;" name="search" placeholder="{{#str}}searchcourses{{/str}}" value="{{value}}">
      </div>
    </div>
</form>

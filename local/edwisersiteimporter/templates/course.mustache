{{!
    @template local_edwisersiteimporter/homepage

    Homepage template.

    Context variables required for this template:
    * file - Site base url
    * image - Screenshot image
    * name - Template name

    Example context (json):
    {
        "file" : "http://edwiser-demo-url.org",
        "image" : "http://edwiser-demo.org/screenshot.jpg",
        "name" : "Edwiser Demo"
    }
}}
<div class="row course-templates templates">
{{#templates}}
<div class="col-lg-4 col-md-6 template">
    <div class="template-wrapper">
        <div class="template-overlay">
            <button class="btn btn-primary view-template"
                data-type="course"
                data-file="{{file}}"
                data-image="{{image}}"
                data-name="{{name}}"
                data-remuiformat="{{remuiformat}}">
                {{#str}} viewtemplate, local_edwisersiteimporter {{/str}}
            </button>
        </div>
        <img src="{{image}}"/>
        <div class="template-foooter text-center bg-white border-top p-2">
            <h5>{{name}}</h5>
        </div>
    </div>
</div>
{{/templates}}
</div>

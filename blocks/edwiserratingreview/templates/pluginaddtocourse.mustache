<div class='pluginaddtocoursearea'>
    {{#modalpopup}}
    {{>block_edwiserratingreview/pluginadditionmodalpopup}}
    {{/modalpopup}}
    {{#isdenied}}
    <div class="card w-100 approvalarea">
        <div class="card-body ernr-pluginaddoptions">
            <h5> Do you want to add this plugin in all your courses<h5>
                    <button type="button" class="btn btn-primary" id="addplugintocourses">Yes</button>
                    <button type="button" class="btn btn-secondary" id="donotaddplugintocourses">No</button>
        </div>
    </div>
    <div class="text-center ernr-pluginaddloader">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    {{/isdenied}}

    {{^isdenied}}
    <div class="alert alert-light pluginadded" role="alert">
        Please go to courses for adding plugins manually
    </div>
    {{/isdenied}}
</div>

{{#js}}
require(['block_edwiserratingreview/pluginaddtocourse'], function(Pluginaddtocourse){
Pluginaddtocourse.init();
});
{{/js}}

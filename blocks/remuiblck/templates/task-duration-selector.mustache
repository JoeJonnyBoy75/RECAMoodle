{{!
    @template block_myoverview/nav-grouping-selector

    This template renders grouping dropdown.

    Example context (json):
    {
        "today": true,
        "inprogress": false,
        "future": false,
        "past": false
    }
}}
<div class="dropdown duration-filter mr-2" data-region="task-duration-filter">
    <button id="taskduration" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="{{#str}} eventduration, core_calendar {{/str}}">
        {{#pix}} i/duration {{/pix}}
        <span class="d-sm-inline-block" data-active-item-text>
            {{#str}} today {{/str}}
        </span>
    </button>
    <ul class="dropdown-menu dropdown-menu-right" data-show-active-item data-active-item-text aria-labelledby="taskduration">
        <li>
            <a class="dropdown-item" href="#" data-filter="grouping" data-value="all" data-pref="all" aria-label="{{#str}} all {{/str}}" aria-controls="courses-view-{{uniqid}}">
                {{#str}} all {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item active" href="#" data-filter="grouping" data-value="today" data-pref="today" aria-label="{{#str}} today {{/str}}" aria-controls="courses-view-{{uniqid}}">
                {{#str}} today {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="#" data-filter="grouping" data-value="next7days" data-pref="next7days" aria-label="{{#str}} next7days, block_remuiblck {{/str}}" aria-controls="courses-view-{{uniqid}}">
                {{#str}} next7days, block_remuiblck {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="#" data-filter="grouping" data-value="next30days" data-pref="next30days" aria-label="{{#str}} next30days, block_remuiblck {{/str}}" aria-controls="courses-view-{{uniqid}}">
                {{#str}} next30days, block_remuiblck {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="#" data-filter="grouping" data-value="next3months" data-pref="next3months" aria-label="{{#str}} next3months, block_remuiblck {{/str}}" aria-controls="courses-view-{{uniqid}}">
                {{#str}} next3months, block_remuiblck {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="#" data-filter="grouping" data-value="next6months" data-pref="next6months" aria-label="{{#str}} next6months, block_remuiblck {{/str}}" aria-controls="courses-view-{{uniqid}}">
                {{#str}} next6months, block_remuiblck {{/str}}
            </a>
        </li>
    </ul>
</div>

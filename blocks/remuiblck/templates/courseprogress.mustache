{{^cannotview}}
<div class='course-progress-settings d-none {{#alwaysload}} always-loading {{/alwaysload}}'>
    <button class="btn btn-primary" id="load-progress" title="{{#str}} loadcourseprogressdesc, block_remuiblck {{/str}}">{{#str}} loadcourseprogress, block_remuiblck {{/str}}</button>
    <div class="form-check d-inline-block" title="{{#str}} alwaysloaddesc, block_remuiblck {{/str}}">
        <input type="checkbox" class="form-check-input" id="always-load-progress" {{#alwaysload}} checked {{/alwaysload}}>
        <label class="form-check-label" for="always-load-progress">{{#str}} alwaysload, block_remuiblck {{/str}}</label>
    </div>
</div>
<div class="block-processing">
    <div class="block-processing-icon"><i class="fa fa-circle-o-notch fa-spin"></i></div>
</div>
<div class="course-progress-block" id="course-progress-{{uniqid}}">
    <table id="DataTables_Teacher" class="dataTable">
        <thead>
            <tr role="row">
            <th>#</th>
            <th>{{#str}}course, moodle{{/str}}</th>
            <th>{{#str}}startdate, block_remuiblck{{/str}}</th>
            <th>{{#str}}enrolledstudents, block_remuiblck{{/str}}</th>
            <th style="width: 100px;">{{#str}}progress, block_remuiblck{{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{> block_remuiblck/placeholder-course-progress }}
            {{> block_remuiblck/placeholder-course-progress }}
            {{> block_remuiblck/placeholder-course-progress }}
            {{> block_remuiblck/placeholder-course-progress }}
            {{> block_remuiblck/placeholder-course-progress }}
            {{> block_remuiblck/placeholder-course-progress }}
        </tbody>
    </table>
    <div class="student_progress_ele">
    </div>
</div>


{{#js}}
require(['block_remuiblck/course_progress'], function(courseprogress) {
  courseprogress.init('[data-block="remuiblck"] #courseprogress', {{{alwaysloadwarning}}});
});
{{/js}}
{{/cannotview}}

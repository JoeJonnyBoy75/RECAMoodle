<div class="course-summaryitem mb-1 p-2 wdm-course-summary bg-blue-grey-200" role="listitem" data-region="course-content" data-course-id="9">
    <div class="d-flex">
        <a href="{{courseviewlink}}{{id}}" tabindex="-1">
            <div class="summaryimage rounded-circle mr-2" style="background-image: url('{{courseimage}}');">
            </div>
        </a>
        <div class="align-self-stretch d-flex flex-column w-p100">
            <div class="d-flex mb-1">
                <a href="{{courseviewlink}}{{id}}" class="coursename">
                    <h4 class="d-inline">{{fullname}}</h4>
                </a>
                {{> block_remuiblck/manage_courses_list_actions }}
            </div>
            <div class="startdate">
                <span>{{#str}} startdate, block_remuiblck {{/str}} {{#userdate}} {{startdate}}, %A, %d %B %Y {{/userdate}}</span>
            </div>
            <div class="summary">
                {{{summary}}}
            </div>
        </div>
    </div>
</div>

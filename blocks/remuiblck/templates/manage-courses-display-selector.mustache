{{!
    @template block_remuiblck/manage-courses-display-selector

    This template renders display dropdown.

    Example context (json):
    {
        "cards": true,
        "list": false,
        "summary": false
    }
}}
<div class="dropdown display-filter mb-2" data-region="manage-courses-display-filter">
    <button id="managecoursesdisplay" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{#pix}} a/view_icon_active {{/pix}}
        <span class="d-sm-inline-block ml-1" data-active-item-text>
            {{#card}} {{#str}} card, block_remuiblck {{/str}} {{/card}}
            {{#list}} {{#str}} list, block_remuiblck {{/str}} {{/list}}
            {{#summary}} {{#str}} summary, block_remuiblck {{/str}} {{/summary}}
        </span>
    </button>
    <ul class="dropdown-menu" data-show-active-item aria-labelledby="managecoursesdisplay">
        <li>
            <a class="dropdown-item {{#card}} active {{/card}}" href="#" data-display-option="display" data-value="card" data-pref="cards" aria-label="{{#str}} card, block_remuiblck {{/str}}" aria-controls="courses-view-{{uniqid}}">
            {{#str}} card, block_remuiblck {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item {{#list}} active {{/list}}" href="#" data-display-option="display" data-value="list" data-pref="list" aria-label="{{#str}} list, block_remuiblck {{/str}}" aria-controls="courses-view-{{uniqid}}">
            {{#str}} list, block_remuiblck {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item {{#summary}} active {{/summary}}" href="#" data-display-option="display" data-value="summary" data-pref="summary" aria-label="{{#str}} summary, block_remuiblck {{/str}}" aria-controls="courses-view-{{uniqid}}">
            {{#str}} summary, block_remuiblck {{/str}}
            </a>
        </li>
    </ul>
</div>
